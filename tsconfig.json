{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["reflect-metadata", "jasmine"],
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  //   "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  //  "include": ["./src/**/*.tsx", "./src/**/*.ts","**/test.ts"],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
